kubectl api-resources | grep -E "^Name|csi|storage|PersistentVolume"


for pod in `kubectl -n csi get pods|grep rbdplugin|grep -v provisioner|awk '{print $1}'`                                                                                                                          
do
echo $pod
kubectl exec -it -n csi $pod -c  csi-rbdplugin rbd -- device list
done

